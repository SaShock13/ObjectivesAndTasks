<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObjectivesAndTasks.ObjectiveDetailsPage">
    <ContentPage.Content>
        <StackLayout Margin="20" x:Name="stackDetails">
            <Entry IsReadOnly="True" Text="{Binding Name}"
                HorizontalOptions="CenterAndExpand" FontSize="25"  FontAttributes="Bold"/>
            <Editor IsReadOnly="True" Text="{Binding Description}" MinimumHeightRequest="100" TextColor="Wheat"> </Editor>
            <Label Text="{Binding Status}"></Label>
            <!--<Frame Margin="20,0,20,0" x:Name="frDetails"></Frame>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>